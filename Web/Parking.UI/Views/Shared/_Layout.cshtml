<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="author" content="The JSONs">
    <meta name="description" content="Simplifica tu estacionamiento.">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
	
    <title>MyPlace | @ViewBag.Title</title>
    <link type="image/x-icon" href="/favicon.ico" rel="icon">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400' rel='stylesheet' type='text/css'>
    
    @Html.Raw(@WebExtensions.CombresLink("PluginsCss"))
    @Html.Raw(@WebExtensions.CombresLink("CoreCss"))

    @RenderSection("Styles", false)

    <script src="@Url.Content("~/Content/Scripts/Plugins/modernizr-2.0.6.js")" type="text/javascript"></script>
</head>

<body>
    
    <header>
            @Html.Partial("_Header")
    </header>
    
    <div role="main" class="controller-@ViewContext.Controller.ValueProvider.GetValue("controller").RawValue action-@ViewContext.Controller.ValueProvider.GetValue("action").RawValue">
        <div id="main" class="layout-width row-fluid">
            @RenderBody()
        </div>
    </div>
    
    <footer>
        <div class="layout-width">
            @Html.Partial("_Footer")
        </div>
    </footer>

    <!-- Scripts -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/Content/Scripts/Plugins/jquery-1.7.1.min.js"><\/script>')</script>
    @Html.Raw(@WebExtensions.CombresLink("PluginsJs"))
    @Html.Raw(@WebExtensions.CombresLink("CoreJs"))
    
    @RenderSection("Scripts", false)

